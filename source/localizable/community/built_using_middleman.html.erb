<article class="built-with-middleman-block">
  <h2><%= t("built.title") %></h2>
  <ul class="built-with-middleman-list">
    <% for site in data.sites.built.sort_by{ |s| (s.title || URI(s.url).host.sub('www.', '')).downcase } %>
      <%= partial "partials/site", locals: { site: site } %>
    <% end %>
  </ul>
</article>

